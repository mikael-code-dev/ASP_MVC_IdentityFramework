<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Folks, Cities and Coutries</title>
    <script src="~/lib/jquery/jquery.js" defer></script>
    <script src="~/bootstrap/js/bootstrap.js" defer></script>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/js/javascript.js" defer></script>
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">People Dashboard &nbsp;&nbsp;&nbsp;</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="People" asp-action="Index">People</a></li>
                        <li class="nav-item menu-divider"></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Country" asp-action="Index">Countries</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="City" asp-action="Index">Cities</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Language" asp-action="Index">Languages</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-body-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="container">
        <p class="footer-text">@DateTime.Now.Year &copy; Mikael</p>
    </footer>
</body>
</html>
